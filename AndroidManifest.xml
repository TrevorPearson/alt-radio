<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.estrode.altradio"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.estrode.altradio.AltRadio"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.estrode.altradio.StationListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.estrode.altradio.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.estrode.altradio.NowPlayingActivity"
            android:label="@string/title_activity_now_playing" >
        </activity>
        <activity
            android:name="com.estrode.altradio.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
    </application>

</manifest>
